@page "{Code?}"
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

@section CSS{
    <link rel="stylesheet" href="~/css/error.css">
}

<div class="error-container">
    <img src="" alt="logo" class="logo"> <!-- to add the logo-->
    @if(Model.Code == "404") {
         <h1>Not Found.</h1>
         <p>The resource you are searching was not found.</p>
    } else {
        <h1>Something went wrong.</h1>
        <p>We are sorry, but an unexpected error occurred.</p>
        <p>Please try again later.</p>
    }
    <a asp-page="Index" class="home-button">Back to Index</a>
</div>
